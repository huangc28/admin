{
  "name": "universal",
  "version": "1.1.0",
  "author": "Bryan Huang",
  "description": "nodejs isomorphic package",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon bin/server.js",
    "lint": "eslint . --ext .js --ext .jsx",
    "build": "npm run clean & webpack --progress --verbose --display-error-details",
    "build:prod": "npm run clean && NODE_ENV=production npm run build -- --env.prod",
    "build:watch": "webpack -w",
    "clean": "rimraf build",
    "test": "ava '**/*.spec.js'",
    "test:watch": "ava --watch '**/*.spec.js'"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "license": "ISC",
  "devDependencies": {
    "asset-require-hook": "1.0.2",
    "ava": "0.16.0",
    "babel-cli": "6.9.0",
    "babel-core": "6.9.1",
    "babel-eslint": "6.0.4",
    "babel-loader": "6.2.4",
    "babel-polyfill": "6.9.1",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-react": "6.5.0",
    "babel-preset-react-hmre": "1.1.1",
    "babel-preset-stage-0": "6.5.0",
    "babel-preset-stage-2": "6.5.0",
    "babel-register": "6.11.6",
    "css-loader": "0.23.1",
    "css-modules-require-hook": "4.0.1",
    "eslint": "2.11.1",
    "eslint-loader": "1.3.0",
    "eslint-plugin-react": "5.1.1",
    "express": "4.14.0",
    "extract-text-webpack-plugin": "2.0.0-beta.3",
    "file-loader": "0.9.0",
    "jshint": "^2.9.3",
    "jshint-loader": "^0.8.3",
    "json-loader": "0.5.4",
    "nodemon": "1.9.2",
    "redux-devtools": "3.3.1",
    "rimraf": "2.5.4",
    "staticify": "0.0.5",
    "style-loader": "0.13.1",
    "svg-url-loader": "1.1.0",
    "url-loader": "0.5.7",
    "webpack": "2.1.0-beta.20",
    "webpack-dev-middleware": "1.6.1",
    "webpack-hot-middleware": "2.7.1",
    "webpack-validator": "2.2.3"
  },
  "dependencies": {
    "isomorphic-fetch": "2.2.1",
    "react": "15.1.0",
    "react-dom": "15.1.0",
    "react-redux": "4.4.5",
    "react-router": "2.6.0",
    "redux": "3.5.2",
    "redux-saga": "0.11.0"
  }
}
