{
  "name": "universal",
  "version": "1.3.1",
  "author": "Bryan Huang <huangchiheng@gmail.com>",
  "description": "nodejs isomorphic package",
  "main": "index.js",
  "scripts": {
    "dev": "npm run clean && NODE_ENV=development nodemon bin/server.js",
    "lint": "eslint . --ext .js --ext .jsx",
    "build": "npm run clean & webpack --progress --verbose --display-error-details",
    "build:prod": "npm run clean && NODE_ENV=production npm run build -- --env.prod",
    "start": "NODE_ENV=production pm2 start node bin/server.js",
    "start:local": "NODE_ENV=production node bin/server.js",
    "clean": "rimraf build/*",
    "test": "jest",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "pre-commit": {
    "run": [
      "lint"
    ]
  },
  "license": "ISC",
  "devDependencies": {
    "@kadira/storybook": "^2.5.2",
    "asset-require-hook": "1.0.2",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.11",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.3.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "css-loader": "^0.28.0",
    "css-modules-require-hook": "^4.0.6",
    "eslint": "^3.19.0",
    "eslint-config-migme": "^3.1.1",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-react": "^6.10.3",
    "express": "4.14.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "image-webpack-loader": "^3.3.0",
    "jest": "^19.0.2",
    "jshint": "^2.9.4",
    "jshint-loader": "^0.8.4",
    "nodemon": "1.9.2",
    "postcss-flexibility": "^1.1.0",
